
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src", "app", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
